<div class="container">
    <form action="/pedidos" method="post">
        <div class="card mt-4">
            <div class="card-header text-center bg-dark text-white" id="agregarReplicaModalLabel">
                <h1>Crear pedido de replicacion</h1>
            </div>
            <div class="card-body">
                {{!-- BARRA DE NAVEGACION --}}
                <div class="container">
                    <div class="row">
                        <div class="col" class="tab-content" id="myTabContent">
                            {{!-- Hola tab contenido --}}
                            <div class="" id="externo" >
                                <label class="col form-group" id="Example">
                                    <label class="font-weight-bold" for="cliente">Cliente:</label>

                                    <select name="cliente" id="listadoClientes" class="cliente form-control">
                                        <option value="Interno"><i>Interno</i></option>
                                        {{#each clientes}}
                                        <option value="{{this.Persona.id}}"> {{ this.Persona.nombre }}
                                            {{this.Persona.apellido}} {{this.Persona.identificacion}} </option>
                                        {{/each}}
                                    </select>

                                    <label class="font-weight-bold" for="descripcion">Descripcion:</label>
                                    <input class="cliente form-control" type="text" name="descripcion" id="" required />
                                    <label for="monto">Monto:</label>
                                    <input class="cliente form-control" type="number" name="monto" min="0" id=""
                                        required />
                                    <label for="fin-oferta">Fin de Oferta:</label>
                                    <input class="cliente form-control" type="date" name="finoferta" id="" required />
                                </label>
                            </div>
                        </div>
                        <div class="col-6 pb-3">
                            {{!-- Hola Dinosaurio --}}
                            <div class="form-group">
                                <h3>Seleccione Dinosaurio</h3>
                                <select class="form-control" name="dinosaurio" onchange="buscarHuesos()"
                                    id="selectHueso" required>
                                    {{!-- @TODO traer dinos --}}
                                    <option value="" selected aria-required="true">Seleccione un Dinosaurio
                                    </option>
                                    {{#each dinosaurios}}
                                    <option value="{{ this.id }}">{{ this.nombre }}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <h3>Seleccione huesos</h3>
                                <label for="Total">
                                    Replica total (todos los huesos replicados)
                                    <button type="button" class="btn btn-primary" id="total">
                                        Seleccionar Todo
                                    </button>
                                    <button type="button" class="btn btn-danger" id="resetear">
                                        Reset
                                    </button>
                                </label>
                                <div class="container border">
                                    <div class="row">
                                        <div class="col-sm border" style="height: 21vh; overflow: auto">
                                            <label for="huesos" id="listaHuesos">
                                            </label>
                                        </div>
                                        <div class="col-sm border">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success form-control" type="submit">Enviar</button>
            </div>
        </div>
    </form>
</div>






