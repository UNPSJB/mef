<form action="/pedidos/{{accion}}/{{id}}" method="post">
    <div class="container pt-4">
        <div class="row">
            <div class="card mx-auto mt-4 text-center">
                <div class="card-header bg-dark text-white">
                    <h2>Demorar Replicacion</h2>
                </div>
                <div class="card-body">
                    <span class="bg-danger form-control text-center text-white">Esta a punto de {{accion}} el siguiente
                        pedido</span>
                    <h5 class="card-title pt-2">Pedido de Replicacion NÂº {{id}}</h5>
                    <div class="row">
                        <div class="container col-6">
                            <p class="card-text">Tiempo estimado de Demora:</p>
                            <div class="row pt-3">
                                <div class="col-6">
                                    <div class="btn-toolbar-vertical justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary">1 a 2 meses</button>
                                        </div>
                                    </div><br>
                                    <div class="btn-toolbar-vertical justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary">2 a 6 meses</button>
                                        </div>
                                    </div><br>
                                </div>
                                <div class="col-6">
                                    <div class="btn-toolbar-vertical justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary">6 de 10 meses</button>
                                        </div>
                                    </div><br>
                                    <div class="btn-toolbar-vertical justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary">+ de 10 meses</button>
                                        </div>
                                    </div><br>
                                </div>
                            </div>

                        </div>

                        <div class="container col-6">
                            <p class="card-text">Ingrese Observacion:</p>
                            <textarea class="form-control   " placeholder="Igrese Observacion..." name="observacion"
                                rows="5"></textarea>
                            <br>
                        </div>
                    </div>
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">
                        Ver Detalle
                    </button>
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content modal-xl">

                                <!-- Modal body -->
                                <div class="modal-body">
                                    {{> replica/detalle detalles}}
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark text-muted">
                    <button type="submit" class="btn btn-success">Confirmar</button>
                    <a href="/pedidos" class="btn btn-danger">Rechazar</a>
                </div>
            </div>
        </div>
    </div>
</form>
