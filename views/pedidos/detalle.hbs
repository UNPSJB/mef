<div class="container">
    <div class="row justify-content-md-center border">

        <div class="col-lg-8 border">
            <div class="row border">
                <div class="col border">
                    {{#with pedido}}
                    <b>Estado Actual: {{this.estadoInstance}}</b>
                    {{/with}}
                </div>
            </div>
            <div class="row border">
                <div class="col border">
                    {{#with pedido}}
                    <b>Cliente:
                        {{!-- {{ Persona.nombre }} --}}
                        {{#with this.Persona as |Cliente|}}
                        {{Cliente.nombre}} {{Cliente.apellido}}
                        {{else}}
                        <i>Interno</i>
                        {{/with}}
                    </b>
                    {{/with}}

                </div>
                <div class="col border">
                    <b>Monto: </b>
                </div>
                <div class="col border">
                    <b>Dinosaurio:
                        {{#with dinosaurio}}
                        {{ nombre }}
                        {{/with}}
                    </b>
                </div>
            </div>
            <div class="row border">
                <div class="col border">
                    {{#with pedido}}
                    <b>Motivo: {{ motivo }}</b>
                    {{/with}}
                </div>
            </div>
            <div class="row border">
                <div class="col border">
                    <b>Huesos del pedido</b><br>
                    <table class="table">
                        <thead>
                            <th>NÂ°</th>
                            <th>Hueso</th>
                        </thead>
                        <tbody>
                            {{#each detalles}}
                            <tr>
                                <td>{{ Hueso.numero }}</td>
                                <td>{{ Hueso.nombre }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row border">
                <div class="col border">
                    <b>Registro de cambios</b>
                    <table class="table">
                        <thead>
                            <th>Estado</th>
                            <th>Fecha de cambio</th>
                            <th>Acciones</th>
                        </thead>
                        <tbody>
                            {{#each estados}}
                            <tr>
                                <td>{{ pedido }}</td>
                                <td></td>
                                <td>
                                    <button class="btn btn-primary" id="button-info">info</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-4 border">
            <div class="container">
                <div id="content">
                    {{!-- AQUI VA LA INFO DEL ESTADO --}}
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#button-info').click(function () {
            $('#content').text();
        });
    });
</script>