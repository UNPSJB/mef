<h1>Lista de huesos</h1>
<div class="padding-top:10px">
    <table class="table table-striped" id="datatable">
        <thead>
            <th>Numero</th>
            <th>Hueso</th>
            <th>Tipo</th>
            <th>Subtipo</th>
            {{#if taller}}
            <th>Tiene Molde</th>
            {{/if}}
        </thead>
        <tbody>
          {{#if taller}}
            {{#each huesos}}
            <tr>
                <td>{{this.numero}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.tipohueso}}</td>
                <td>{{this.subtipohueso}}</td>
                <td>                    
                    <form action="/dinosaurios/moldes?_method=PATCH" method="POST">
                        <label class="switch">
                        {{#if this.disponible}}
                        <input onchange="toggleMolde({{this.id}})" type="checkbox" checked>
                        {{else}}
                        <input onchange="toggleMolde({{this.id}})" type="checkbox">
                        {{/if}}
                        <span class="slider round"></span>
                        </label>
                    </form>
                </td>
            </tr>
            {{/each}}
            {{else}}
            {{#each huesos}}
            <tr>
                <td>{{this.numero}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.tipohueso}}</td>
                <td>{{this.subtipohueso}}</td>
            </tr>
            {{/each}}
          {{/if}}
        </tbody>
    </table>
</div>
<script>
function toggleMolde(id){
    fetch(`https://mef2019.herokuapp.com//dinosaurios/moldes/toggle?id=${id}`,{
        method:"PATCH",
        credentials:"same-origin",
    })
    //aca hago una llamada con fetch
}
</script>
