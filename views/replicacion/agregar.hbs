<h1>Crear pedido de replicacion</h1>
    <label for="tipoReplicacion">Seleccione Tipo</label>
<form action="/replicas" method="post">
    <div class="container">
        <div class="row border rounded pt-2">
            <div class="col-4">
                <label for="tipo">
                    <input type="radio" name="tipo" value="Interno" required>Interno
                </label>
            </div>
            <div class="col-8">

            </div>
        </div>
        <div class="row bg-light border rounded">
            <div class="col-4 d-flex align-items-center">
                <span>
                    <label for="tipo">
                        <input type="radio" name="tipo" value="Externo" required checked>Externo
                    </label>
                </span>

            </div>
            <div class="col-8">
                <div class="form-group">
                    <label for="cliente">Cliente:</label>
                    {{!-- <input class="cliente form-control" type="text" name="cliente" id="" required> --}}
                    <select class="cliente form-control" name="cliente" id="" required>
                        {{#each clientes}}
                        <option value="{{this.id}}">{{this.Persona.identificacion}} - {{this.Persona.nombre}} {{this.Persona.apellido}} - {{this.Persona.email}} - {{this.tipo}} - {{this.Persona.direccion}},{{this.Persona.localidad}}</option>
                        {{/each}}
                    </select>
                    <label for="descripcion">Descripcion:</label>
                    <input class="cliente form-control" type="text" name="descripcion" id="" placeholder="Ingrese descripcion del pedido" required>
                    <label for="monto">Monto:</label>
                    <input class="cliente form-control" type="number" name="monto" min="0" id="" placeholder="Ingrese el monto de presupuesto del pedido" required>
                    <label for="fin-oferta">Fin de Oferta:</label>
                    <input class="cliente form-control" type="date" name="finoferta" id="" required>
                </div>
            </div>
        </div>

    </div>
    <div class="form-group">
            <h3>Seleccione Dinosaurio</h3>
            <select class="form-control" name="dinosaurio" onchange="buscarHuesos()" id="selectHueso" required>
                {{!-- @TODO traer dinos --}}
                <option value="" selected aria-required="true">Seleccione un Dinosaurio</option>
                {{#each dinosaurios}}
                <option value="{{this.id}}">{{this.nombre}}</option>
                {{/each}}
            </select>
        </label>
    </div>
    <div class="form-group">
        <h3>Seleccione huesos</h3>
        <label for="Total">
            Replica total (todos los huesos replicados)
            <button type="button" class="btn btn-primary" id="total">Seleccionar Todo</button>
            <button type="button" class="btn btn-danger" id="resetear">Reset</button>
        </label>
        <label for="huesos" id="listaHuesos">

        </label>
    </div>
    <button class="btn btn-success form-control" type="submit">Enviar</button>
</form>

<script>
    //https://stackoverflow.com/questions/1085801/get-selected-value-in-dropdown-list-using-javascript
    let e = document.getElementById("selectHueso");
    e.addEventListener("change", buscarHuesos);

    function buscarHuesos() {
        let dinoId = e.options[e.selectedIndex].value;
        //console.log(e.options[e.selectedIndex].text);
        fetch(`http://localhost:3000/dinosaurios/huesos/${dinoId}`, { mode: "cors" })
            .then((res) => {
                return res.json()
            })
            .then((json) => {
                let arr = [];
                let contenedor = document.getElementById("listaHuesos");
                contenedor.innerHTML = "";
                const entries = Object.entries(json)
                for (var key in json) {
                    arr.push(generateCheckbox(json[key].id, json[key].nombre, json[key].numero))
                }
                contenedor.innerHTML = arr;
            })
            .catch((err) => {
                console.log(err)
            })
    }

    function generateCheckbox(id, nombre, numero) {
        return `<input type="checkbox" name="hueso" value="${id}">${nombre} #${numero}`;
    }
</script>

<script>
    //https://stackoverflow.com/questions/386281/how-to-implement-select-all-check-box-in-html
    $("#total").click(function(ev) {
            $("[name='hueso']").each(function () {
                this.checked = true
            })
    })
    $("#resetear").click(function(ev) {
            $("[name='hueso']").each(function () {
                this.checked = false
            })
    })
</script>

<script>

    $("[name='tipo']").change(function (ev) {
        if (this.value == "Interno") {
            $(".cliente").each(function () {
                this.disabled = true;
                this.required = false;
            })
        } else {
            $(".cliente").each(function () {
                this.required = true;
                this.disabled = false;
            })
        }
    })
</script>