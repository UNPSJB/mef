<h1>Eliminar Empleado</h1>
<div class="alert alert-danger mt-4">Segure que queres borrar esto ?</div>
 <table class="table">
     <thead>
        <th scope="col">Documento</th>    
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Tipo</th>
        <th scope="col">Direccion</th>
        <th scope="col">Localidad</th>
        <th scope="col">Email</th>
        <th scope="col">Fecha de Nacimiento</th>
        <th scope="col">Telefono</th>
     </thead>
    <tbody>
        <tr>
            <th>{{empleado.Persona.identificacion}}</th>    
            <th>{{empleado.Persona.nombre}}</th>
            <th>{{empleado.Persona.apellido}}</th>
            <th>{{empleado.tipo}}</th>
            <th>{{empleado.Persona.direccion}}</th>
            <th>{{empleado.Persona.localidad}}</th>
            <th>{{empleado.Persona.email}}</th>
            <th>{{empleado.Persona.fecha_nacimiento}}</th>
            <th>{{empleado.Persona.telefono}}</th>
        </tr>
    </tbody>
 </table>

<form action="/empleados?_method=DELETE" method="POST" >
<input name="id" type="number" value="{{empleado.id}}" hidden required>
<button type="submit" class="btn btn-danger">Eliminar</button>
<a href="/empleados" class="btn btn-primary">Nah!</a>
</form>