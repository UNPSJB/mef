<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Incluye Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <form id="createEmployeeForm" class="pt-3" action="/empleados" method="post" onsubmit="handleAddEmployee(event)">
      <div class="card mt-4">
        <div class="card-header text-center bg-secondary text-white" id="agregarEmpleadoModalLabel">
          <h1>Agregar Empleado de Taller</h1>
        </div>
        <div class="card-body">
          <div class="container">
            <div class="row">
              <div class="col-6 pb-2">
                <label class="font-weight-bold" for="identificacion">Documento</label>
                <input type="number" class="form-empleado form-control" min="1000000" max="100000000" minlength="6"
                  maxlength="50" name="identificacion" id="InputIdentificacion" placeholder="Ingrese su documento"
                  required {{#if empleado}} value="{{empleado.identificacion}}" {{/if}}>
                <small class="form-text-muted text-muted">Solo números</small><br>
                <label class="font-weight-bold" for="nombre">Nombre</label>
                <input type="text" class="form-empleado form-control" minlength="1" maxlength="50" name="nombre"
                  id="InputNombre" placeholder="Ingrese Nombre" required {{#if empleado}}value="{{empleado.nombre}}"
                  {{/if}}>
                <small class="form-text-muted text-muted">Mínimo 1 caracter. Máximo 50 caracteres</small><br>
                <label class="font-weight-bold" for="apellido">Apellido</label>
                <input type="text" class="form-empleado form-control" minlength="1" maxlength="50" name="apellido"
                  id="InputApellido" placeholder="Ingrese Apellido" required {{#if
                  empleado}}value="{{empleado.apellido}}" {{/if}}>
                <small class="form-text-muted text-muted">Mínimo 1 caracter. Máximo 50 caracteres</small><br>
                <label class="font-weight-bold" for="direccion">Dirección</label>
                <input type="text" class="form-empleado form-control" minlength="5" maxlength="140" name="direccion"
                  id="InputDireccion" placeholder="Ingrese Dirección" required {{#if
                  empleado}}value="{{empleado.direccion}}" {{/if}}>
                <small class="form-text-muted text-muted">Dirección completa. Mínimo 5 caracteres. Máximo 140
                  caracteres</small><br>
              </div>
              <div class="col-6">
                <label class="font-weight-bold" for="localidad">Localidad</label>
                <input type="text" class="form-empleado form-control" minlength="4" maxlength="50" name="localidad"
                  id="InputLocalidad" placeholder="Ingrese Localidad" required {{#if
                  empleado}}value="{{empleado.localidad}}" {{/if}}>
                <small class="form-text-muted text-muted">Mínimo 4 caracteres. Máximo 50 caracteres</small><br>
                <label class="font-weight-bold" for="email">Correo Electrónico</label>
                <input type="email" class="form-empleado form-control" minlength="6" maxlength="50" name="email"
                  id="InputEmail" placeholder="Ingrese correo electrónico" required {{#if
                  empleado}}value="{{empleado.email}}" {{/if}}>
                <small class="form-text-muted text-muted">Mínimo 6 caracteres. Máximo 50 caracteres</small><br>
                <label class="font-weight-bold" for="fechaNacimiento">Fecha Nacimiento</label>
                <input type="date" class="form-empleado form-control" name="fecha_nacimiento" min="1900-01-01"
                  id="InputFechaNacimiento" required {{#if empleado}}value="{{empleado.fecha_nacimiento}}" {{/if}}>
                <small class="form-text-muted text-muted">Fecha de nacimiento de empleado</small><br>
                <label class="font-weight-bold" for="InputTelefono">Teléfono</label>
                <input type="tel" class="form-empleado form-control" minlength="6" maxlength="50" name="telefono"
                  id="InputTelefono" placeholder="Ingrese Teléfono" required {{#if
                  empleado}}value="{{empleado.telefono}}" {{/if}}>
                <small class="form-text-muted text-muted">Mínimo 6 caracteres. Máximo 50 caracteres</small><br>
                {{#if empleado}}<input name="id" type="number" value="{{empleado.id}}" hidden> {{/if}}
              </div>
            </div>
            <br>
            <!-- Botón de Agregar Empleado de Taller-->
            <div class="row justify-content-center">
              <div class="col-6 text-center">
                <button type="submit" class="btn btn-success btn-sm btn-block">Agregar Empleado de Taller</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Modal para el mensaje emergente -->
  <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="alertModalLabel">Agregado</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          El empleado fue agregado exitosamente.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Incluye jQuery y Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script>
    function handleAddEmployee(event) {
      event.preventDefault();

      // Realiza la petición POST usando Fetch API
      fetch(event.target.action, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        body: new URLSearchParams(new FormData(event.target))
      }).then(response => {
        if (response.ok) {
          // Abre el modal
          $('#alertModal').modal('show');

          // Redirige al listado de empleados después de cerrar el modal
          $('#alertModal').on('hidden.bs.modal', function () {
            window.location.href = '/empleados'; // Redirige a la URL específica
          });
        } else {
          // Maneja el error si la petición falla
          alert('Error al agregar el empleado.');
        }
      }).catch(error => {
        // Maneja errores de la petición
        console.error('Error:', error);
        alert('Ocurrió un error.');
      });
    }
  </script>
</body>

</html>

<!-- Setea la fecha actual -->
<script>
  $(document).ready(function () {
    var hoy = formatDate(new Date());
    document.getElementById("InputFechaNacimiento").setAttribute("max", hoy);
    $("#InputFechaNacimiento").attr("max", hoy);
  })
  function formatDate(date) {
    var d = new Date(date),
      month = '' + (d.getMonth() + 1),
      day = '' + d.getDate(),
      year = d.getFullYear() - 18;// Los empleados deben tener 18 años o más
    if (month.length < 2)
      month = '0' + month;
    if (day.length < 2)
      day = '0' + day;
    return [year, month, day].join('-');
  }
  $(document).ready(() => {
  });
</script>