<div class="card mt-4">
    <div class="card-header text-center bg-secondary text-white">
        <h1>Eliminar Replica</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <th scope="col">Dinosaurio</th>
                <th scope="col">Hueso</th>
                <th scope="col">Disponible</th>
                <th scope="col">Fecha de inicio</th>
                <th scope="col">Fecha de finalizacion</th>
            </thead>
            <tbody>
                <tr>
                    <td>{{replica.Dinosaurio.nombre}}</td>
                    <td>{{replica.Hueso.nombre}}</td>
                    <td>
                        {{#if replica.disponible}}
                        Si
                        {{else}}
                        No
                        {{/if}}
                    </td>
                    <td>{{replica.fecha_inicio}}</td>
                    <td>{{replica.fecha_fin}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <form action="/replicas?_method=DELETE" method="POST">
            <input type="number" name="id" value="{{replica.id}}" hidden required>
            <button type="submit" class="btn btn-danger btn-block">Eliminar</button>
            <a href="/pedidos/replicas" class="btn btn-secondary btn-block">Volver</a>
        </form>
    </div>
</div>