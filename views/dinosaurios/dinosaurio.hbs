<div style="padding-top: 10px"></div>
<h1 class="bg-secondary text-center text-white rounded p-2">
  Dinosaurios
  {{#if req.coleccion}}
  <a href="/dinosaurios/agregar" class="btn  btn-success btn-primary border border-light" rel="noopener noreferrer">
    +
  </a>
  {{/if}}
</h1>
<table class="table table-striped table-bordered" id="dinosTable">
  <thead>
    <th scope="col">#</th>
    <th scope="col">Nombre</th>
    <th scope="col">Alimentacion</th>
    <th scope="col">Periodo</th>
    <th scope="col">Subclase</th>
    <th scope="col">Descubrimiento</th>
    <th scope="col">Acciones</th>
  </thead>
  <tbody>
    {{#each dinosaurio}}
    <tr>
      <th>{{id}}</th>
      <td>{{nombre}}</td>
      <td>{{alimentacion}}</td>
      <td>{{periodo}}</td>
      <td>{{SubClase.descripcion}}</td>
      <td>{{descubrimiento}}</td>
      <!-- acciones aca -->
      <td>
        {{#if ../req.coleccion}}
        <a href="/dinosaurios/editar/{{id}}"><span class="material-icons">
            edit
          </span></a>
        <!--editar-->
        
        {{/if}}
        <a href="/dinosaurios/moldes/{{id}}"><span
            style="font-size: 17px;vertical-align:text-bottom;line-height: 2;">ðŸ¦´</span></a>
        {{!-- otras acciones mas --}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>



