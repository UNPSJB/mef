<form class="pt-3" action="/subclases?_method=PUT" method="POST">
    <div class="form-group">
        <label>Descripcion:</label>
        <br>
        <input type="text" name="descripcion" placeholder="Ingrese Descripcion Subclase"
            value='{{subclase.descripcion}}' required>
        <br>
        <small id="descripcion">Nombre de la subclase</small>
    </div>

    <label>Clase:</label>
    <br>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-secondary form-check-label">
            <input type="radio" name="clase" id="option1" value="Saurisquio" autocomplete="off" required> Saurisquio
        </label>
        <label class="btn btn-secondary form-check-label">
            <input type="radio" name="clase" id="option2" value="Ornitisquio" autocomplete="off"> Ornitisquio
        </label>
    </div>
    <div class="form-group pt-4">
        <input type="number" name="id" value="{{subclase.id}}" hidden required>
        <button type="submit" class="btn btn-primary">Agregar Subclase!</button>
    </div>
    
</form>