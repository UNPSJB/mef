<div class="container pt-4">
  <form action="/subclases" method="POST">
    <div class="row">
      <div class="col-8 mx-auto">
        <div class="card mx-auto">
          <div class="card-header bg-secondary text-white text-center">
            <h3>Agregar Subclase</h3>
          </div>
          <div class="card-body">

            <div class="row">
              <div class="form-group col">
                <label class="font-weight-bold">Descripcion:</label>
                <input type="text" name="descripcion" minlength="4" maxlength="50" class="form-control" placeholder="Ingrese Descripcion Subclase"
                  required {{#if subclase}} value="{{subclase.descripcion}}" {{/if}}>
                <small class="form-text-muted text-muted">Minimo 4 caracteres. Maximo 50 caracteres</small><br>

              </div>
            </div>

            <div class="row pb-4 text-center mx-auto">
                <span class="font-weight-bold pb-2">Clase:</span>
                <div class="pl-2" data-toggle="buttons">
                  <div class="btn btn-secondary form-check-label">
                    <input type="radio" name="clase"  value="Saurisquio" autocomplete="off" required>
                    Saurisquio
                  </div>
                  <label class="btn btn-secondary form-check-label">
                    <input type="radio" name="clase"  value="Ornitisquio" autocomplete="off">
                    Ornitisquio
                  </label>
                </div>
            </div>
            <div class="row">
              <div class="form-group col pb-2">
                <button type="submit" class="btn btn-success btn-block form-control">Agregar Subclase</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>