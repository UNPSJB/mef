<div style="padding-top: 10px"></div>
<h1>Subclases <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#agregarModal">+</button>
</h1>
<table class="table">
  <thead>
    <th scope="col">Nombre</th>
    <th scope="col">Clase</th>
    <th scope="col">Acciones</th>
  </thead>
  <tbody>
    {{#each result}}
    <tr>
      <td>{{this.descripcion}}</td>
      <td>{{this.clase}}</td>
      <!-- acciones aca -->
      <td>
        <a href="#" data-toggle="modal" data-target="#editar{{this.id}}"><i class="far fa-edit"></i></a>
        <!--editar-->
        <a href="#" data-toggle="modal" data-target="#eliminar{{this.id}}"><i class="fas fa-minus-circle"></i></a>
          {{!-- otras acciones mas --}}
        {{> subclase/editar this}}
        {{> subclase/eliminar this}}
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>

{{> subclase/agregar}}
