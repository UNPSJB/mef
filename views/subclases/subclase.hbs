<div style="padding-top: 10px"></div>
<h1>Subclases <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#agregarModal">+</button>
</h1>
<table class="table">
  <thead>
    <th scope="col">Nombre</th>
    <th scope="col">Clase</th>
    <th scope="col">Acciones</th>
  </thead>
  <tbody>
    {{#each result}}
    <tr>
      <td>{{this.descripcion}}</td>
      <td>{{this.clase}}</td>
      <!-- acciones aca -->
      <td>
        <a href="/subclases/editar?id={{this.id}}"><i class="far fa-edit"></i></a>
        <!--editar-->
        <a href="/subclases/eliminar?id={{this.id}}"><i class="fas fa-minus-circle"></i></a>
          {{!-- otras acciones mas --}}
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>


<!-- Modal -->
<div class="modal fade" id="agregarModal" tabindex="-1" role="dialog" aria-labelledby="agregarModalTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="agregarModalTitle">Agregar Subclase</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/subclases" method="POST">
        <div class="modal-body">
          {{> formSubclase}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>