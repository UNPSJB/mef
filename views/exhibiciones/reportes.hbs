<h1>Pedidos Demorados</h1>

<!-- Gráfico de Barras -->
<div style="max-width: 800px; margin: auto;">
  <canvas id="myChart"></canvas>
</div>

<!-- Lista de Etiquetas Debajo del Gráfico -->
<div id="legend" class="mt-3 text-center"></div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // SCRIPT PARA EL GRAFICO (BARRAS) - Motivos de Demora
  const ctx = document.getElementById('myChart').getContext('2d');
  const data = {
    labels: ['Falta De Personal', 'Falta De Material', 'Falta De Presupuesto', 'Otros'],
    datasets: [{
      label: 'Motivos de Demora',
      data: [
        {{ motivosDemora.faltaDePersonal }},
        {{ motivosDemora.faltaDeMaterial }},
        {{ motivosDemora.faltaDePresupuesto }},
        {{ motivosDemora.otros }}
      ],
      backgroundColor: [
        'rgb(255, 99, 132)',
        'rgb(255, 159, 64)',
        'rgb(255, 205, 86)',
        'rgb(75, 192, 192)'
      ],
      borderColor: [
        'rgb(255, 99, 132)',
        'rgb(255, 159, 64)',
        'rgb(255, 205, 86)',
        'rgb(75, 192, 192)'
      ],
      borderWidth: 1
    }]
  };

  new Chart(ctx, {
    type: 'bar',
    data: data,
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        },
        title: {
          display: true,
          text: 'Motivos de Demora en Pedidos'
        }
      },
      scales: {
        x: {
          beginAtZero: true
        },
        y: {
          beginAtZero: true
        }
      }
    },
  });

  // Crear etiquetas debajo del gráfico
  const legendContainer = document.getElementById('legend');
  const legendHtml = data.labels.map((label, index) => {
    return `<div>
      <span style="background-color: ${data.datasets[0].backgroundColor[index]}; width: 10px; height: 10px; display: inline-block; margin-right: 5px;"></span>
      ${label}: ${data.datasets[0].data[index]}
    </div>`;
  }).join('');
  legendContainer.innerHTML = legendHtml;
</script>