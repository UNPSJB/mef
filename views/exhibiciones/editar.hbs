<div class="container">
  <form action="/exhibiciones?_method=PUT" method="POST">
    <div class="card mt-4">
      <div class="card-header text-center bg-dark text-white" id="agregarDinoModalLabel">
        <h3>Editar Exhibicion</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label for="nombre">Nombre:</label>
          <input type="text" name="nombre" id="" class="form-control" placeholder="Nombre de la exhibicion" {{#with exh }} value="{{nombre}}" {{/with}}>
          <label for="tematica">Tematica:</label>
          <input type="text" name="tematica" id="" class="form-control" placeholder="Tematica de la tematica"{{#with exh }} value="{{tematica}}" {{/with}} >
          <label for="duracion">Duracion:</label>
          <input type="text" name="duracion" id="" class="form-control" placeholder="Duracion de la exhibicion" {{#with exh }} value="{{duracion}}" {{/with}}>
        </div>
        <div class="form-group container">
          <div class="row">
            <div class="col-6" style="padding-left:0px">
              <label for="fosiles">Listado de fosiles disponibles:</label>
              <div class="col-sm border" style="height: 21vh; overflow: auto">
                {{!-- @TODO agregar fosiles --}}
                {{#each fosiles_propios}}
                 <input type="checkbox" name="fosiles" id="" value="{{this.id}}" checked> {{this.huesos}} | {{this.Dinosaurio.nombre}}
                <br>
                {{/each}}
                {{#each fosiles}}
                <input type="checkbox" name="fosiles" id="" value="{{this.id}}">{{this.huesos}} | {{this.Dinosaurio.nombre}}
                <br>
                {{/each}}
              </div>
            </div>
            <div class="col-6">
              <label for="replicas">Listado de replicas disponibles:</label>
              <div class="col-sm border" style="height: 21vh; overflow: auto">
                {{!-- @TODO agregar replicas --}}
                {{#each replicas_propias}}
                 <input type="checkbox" name="replicas" id="" value="{{this.value}}" checked>{{this.Hueso.nombre}} | {{this.Dinosaurio.nombre}}
                <br>
                {{/each}}
                {{#each replicas}}
                <input type="checkbox" name="replicas" id="" value="{{this.value}}">{{this.Hueso.nombre}} | {{this.Dinosaurio.nombre}}
                <br>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <input type="hidden" name="id" value="{{exh.id}}" hidden>
      <button type="submit" class="btn btn-success btn-block">Editar Exhibicion</button>
      </div>
    </div>
</div>
</form>
</div>