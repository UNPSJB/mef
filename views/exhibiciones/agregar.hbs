<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Incluye Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <form id="createExhibitionForm" action="/exhibiciones" method="post" onsubmit="handleAddExhibition(event)">
      <div class="card mt-4">
        <div class="card-header text-center bg-secondary text-white" id="agregarDinoModalLabel">
          <h3>Agregar Exhibición</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input {{#with nombre}} value="{{this}}" {{/with}} type="text" minlength="4" maxlength="50" name="nombre"
              class="form-control" placeholder="Nombre de la exhibición" required>
            <small class="form-text-muted text-muted">Mínimo 4 caracteres. Máximo 50 caracteres</small><br>
            <label for="tematica">Temática:</label>
            <input {{#with tematica}} value="{{this}}" {{/with}} type="text" minlength="4" maxlength="50"
              name="tematica" class="form-control" placeholder="Temática de la exhibición" required>
            <small class="form-text-muted text-muted">Mínimo 4 caracteres. Máximo 50 caracteres</small><br>
            <label for="duracion">Duración: <i>Cantidad de meses</i></label>
            <input {{#with duracion}} value="{{this}}" {{/with}} type="number" name="duracion" min="1" max="40"
              class="form-control" placeholder="Duración de la exhibición. Ej: 2 meses, 4 meses" required>
            <small class="form-text-muted text-muted">Mínimo 1. Máximo 40. Solo números</small><br>
          </div>
          <div class="form-group container">
            <div class="row">
              <div class="col-6" style="padding-left:0px">
                <label for="fosiles">Listado de fósiles disponibles:</label>
                <div class="col-sm border" style="height: 21vh; overflow: auto">
                  {{!-- @TODO agregar fosiles --}}
                  {{#each fosiles}}
                  <input type="checkbox" name="fosiles" value="{{this.id}}">{{this.huesos}} | {{this.Dinosaurio.nombre}}
                  <br>
                  {{else}}
                  <i>No hay Fósiles disponibles</i>
                  {{/each}}
                </div>
                <small class="form-text-muted text-muted">Se puede agregar fósiles luego de crear la exhibición.</small>
              </div>
              <div class="col-6">
                <label for="replicas">Listado de réplicas disponibles:</label>
                <div class="col-sm border" style="height: 21vh; overflow: auto">
                  {{!-- @TODO agregar replicas --}}
                  {{#each replicas}}
                  <input type="checkbox" name="replicas" value="{{this.id}}" min="0">{{this.Hueso.nombre}} |
                  {{this.Dinosaurio.nombre}}
                  <br>
                  {{else}}
                  <i>No hay Réplicas disponibles</i>
                  {{/each }}
                </div>
                <small class="form-text-muted text-muted">Se puede agregar réplicas luego de crear la
                  exhibición.</small>
              </div>
            </div>
          </div>
        </div>
        <br>
        <!-- Botón de Agregar Exhibición-->
        <div class="row justify-content-center">
          <div class="col-6 text-center">
            <button type="submit" class="btn btn-success btn-sm btn-block">Agregar Exhibición</button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Modal para el mensaje emergente -->
  <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="alertModalLabel">Agregada</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          La exhibición fue agregada exitosamente.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Incluye jQuery y Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script>
    function handleAddExhibition(event) {
      event.preventDefault();

      // Realiza la petición POST usando Fetch API
      fetch(event.target.action, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        body: new URLSearchParams(new FormData(event.target))
      }).then(response => {
        if (response.ok) {
          // Abre el modal
          $('#alertModal').modal('show');

          // Redirige al listado de exhibiciones después de cerrar el modal
          $('#alertModal').on('hidden.bs.modal', function () {
            window.location.href = '/exhibiciones'; // Redirige a la URL específica
          });
        } else {
          // Maneja el error si la petición falla
          alert('Error al agregar la exhibición.');
        }
      }).catch(error => {
        // Maneja errores de la petición
        console.error('Error:', error);
        alert('Ocurrió un error.');
      });
    }
  </script>
</body>

</html>