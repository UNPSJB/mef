<div style="padding-top: 10px"></div>
<h1>Exhibiciones <a href="/exhibiciones/agregar" class="btn btn-success btn-primary">+</a></h1>
<table class="table table-striped table-bordered" >
  <thead>
    <th scope="col">Nombre</th>
    <th scope="col">Tematica</th>
    <th scope="col">Duracion</th>
    <th scope="col">Detalle</th>
    <th scope="col">Acciones</th>
  </thead>
  <tbody>
    {{#each exhibiciones}}
    <tr>
      <td>{{this.nombre}}</td>
      <td>{{this.tematica}}</td>
      <td>{{this.duracion}} meses</td>
      <td>
        <a href="/exhibiciones/detalle/{{this.id}}" class="btn btn-primary">Ver detalle</a>
      </td>
      <td>
        <a href="/exhibiciones/editar/{{this.id}}"><span class="material-icons">edit</span></a>
        <a href="/exhibiciones/eliminar/{{this.id}}"><span style="color:red" class="material-icons">delete</span></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{> pagination/footer paginationObj }}