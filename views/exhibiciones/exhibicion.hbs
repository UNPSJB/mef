<div style="padding-top: 10px">
    <h1>Exhibiciones</h1>
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <th scope="col">Nombre</th>
            <th scope="col">Duracion</th>
            <th scope="col">Tematica</th>
            <th scope="col">Lista de fosiles</th>
            <th scope="col">Lista de replicas</th>
            <th scope="col">Acciones</th>
        </thead>
        <tbody>
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.duracion}}</td>
                <td>{{this.Tematica}}</td>
                <td>
                    <a href="={{this.id}}" class="btn btn-primary">fosiles</a>
                </td>
                <td>
                    <a href="={{this.id}}" class="btn btn-primary">replicas</a>
                </td>
                <td>
                    <a href="/exhibiciones/editar?id={{this.id}}"><i class="far fa-edit"></i></a>
                    <!--editar-->
                    <a href="/exhibiciones/eliminar?id={{this.id}}"><i class="fas fa-minus-circle"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
</div>