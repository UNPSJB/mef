<div style="padding-top: 10px"></div>
<h1>Fosiles
  <a href="/fosiles/agregar" class="btn btn-success btn-primary" rel="noopener noreferrer">+</a>
</h1>
<table style="table-layout: fixed;" class="table table-hover table-striped table-bordered" >
  <thead>
    <th scope="col">Codigo de Coleccion</th>
    <th scope="col">Disponible para exhibicion</th>
    <th scope="col">Peso</th>
    <th scope="col">Fecha Encontrado</th>
    <th scope="col">Hueso Referencia</th>
    <th scope="col">Dinosaurio</th>
    <th scope="col">Observaciones</th>
    <th scope="col">Acciones</th>
  </thead>
  <tbody>
    {{#each results}}
    <tr>
      <td style="word-wrap: break-word;">{{this.numero_coleccion}}</td>
      <td>{{#if this.disponible}}
        Si
        {{else}}
        No
        {{/if}}
      </td>
      <td>{{this.peso}} Kg.</td>
      <td>{{this.fecha_encontrado}}</td>
      <td>{{this.huesos}}</td>
      <td>{{this.Dinosaurio.nombre}}</td>
      <td style="word-wrap: break-word;">{{this.observacion}}</td>
      <td>
        {{!-- Acciones --}}
        <a href="/fosiles/editar/{{this.id}}">
          <span class="material-icons">
          edit
          </span>
        </a>
        <a href="/fosiles/eliminar/{{this.id}}">
          <span class="material-icons" style="color:red">
          delete
          </span>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{> pagination/footer paginationObj }}