                            <div>
                                <input class="form-control" type="date" id="fecha_encontrado">
                            </div>
                            <label class="pt-3 text-center font-weight-bold">Disponible:</label>
                            <div class="btn-group btn-block btn-group-toggle pt-2" data-toggle="buttons">
                                <label class="btn btn-secondary form-check-label">
                                    <input type="radio" name="disponible" id="option1" value="true" autocomplete="off"
                                        required>
                                    Si
                                </label>
                                <label class="btn btn-secondary form-check-label">
                                    <input type="radio" name="disponible" id="option2" value="false" autocomplete="off">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="observacion">observaciones</label><br>
                            <textarea class="form-control" name="observacion" id="" cols="number" rows="5" placeholder="Ingrese observaciones"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-success btn-block">Agregar Fosil!</button>
                    </div>
                </div>

