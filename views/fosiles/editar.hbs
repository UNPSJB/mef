<div class="container mt-4">
  <form action="/fosiles?_method=PUT" method="POST">
    <div class="card mx-auto mt-4">
      <div class="card-header bg-dark text-white text-center">
        <h3>Editar Fosil</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="font-weight-bold" for="dinosaurio">Seleccionar Dinosaurio</label>
              <input class="form-control" name="" id="dinosaurioId" disabled value="{{dinosaurio.nombre}}">
              <input type="hidden" name="DinosaurioId" value="{{dinosaurio.id}}">
              <small id="nombreCientificohelp" class="form-text-muted text-muted">Dinosaurio de referencia</small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="font-weight-bold" for="hueso">Seleccionar Hueso</label>
              <select class="form-control" name="huesos" id="huesoId">
                {{#each bones}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
              <small id="nombreCientificohelp" class="form-text-muted text-muted">Hueso de referencia</small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="font-weight-bold" for="InputNumeroColeccion">Numero de Coleccion</label>
              {{#if fosil}}
              <input type="text" class="form-control" maxlength="30" name="numero_coleccion" id="InputNumeroColeccion"
                placeholder="Ingrese Numero de Coleccion" required value="{{fosil.numero_coleccion}}">
              {{/if}}
              <small id="nombreCientificohelp" class="form-text-muted text-muted">Maximo 30 caracteres</small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="font-weight-bold"  for="InputPeso">Peso (Kg)</label>
              {{#if fosil}}
              <input type="number" class="form-control" min="0" max="2000" name="peso" id="InputPeso" placeholder="Ingrese Peso de Fosil"
                required value="{{fosil.peso}}">
              {{/if}}
              <small id="nombreCientificohelp" class="form-text-muted text-muted">Minimo 1 kg y Maximo 2000 kg</small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="fecha_encontrado" class="col-form font-weight-bold">Fecha Encontrado</label>
              <div>
                {{#if fosil}}
                <input class="form-control" type="date" id="InputFechaDescubrimiento"
                  value="{{fosil.fecha_encontrado}}">
                {{/if}}
              </div>
              <label class="pt-3 text-center font-weight-bold">Disponible para exhibicion:</label>

              <br>
              {{#if fosil.disponible}}
              <label class="btn btn-secondary form-check-label">
                <input type="radio" name="disponible" id="option1" value="true" autocomplete="off" required checked>
                Si
              </label>
              <label class="btn btn-secondary form-check-label">
                <input type="radio" name="disponible" id="option2" value="false" autocomplete="off">
                No
              </label>

              {{else}}
              <label class="btn btn-secondary form-check-label">
                <input type="radio" name="disponible" id="option1" value="true" autocomplete="off">
                Si
              </label>
              <label class="btn btn-secondary form-check-label">
                <input type="radio" name="disponible" id="option2" value="true" autocomplete="off" required checked>
                No
              </label>
              {{/if}}
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="font-weight-bold" for="observacion">observaciones</label><br>
              {{#if fosil}}
              <textarea class="form-control" maxlength="140" name="observacion" id="" maxlength="100" cols="number" rows="5"
                placeholder="Ingrese observaciones">{{fosil.observacion}}</textarea>
              {{/if}}
              <small id="nombreCientificohelp" class="form-text-muted text-muted">Maximo 140 caracteres</small>
            </div>
          </div>
        </div>
        <div class="row">
          <input type="numbrer" name="id" value="{{fosil.id}}" hidden>
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary btn-block">Guardar Cambios</button>
          </div>
        </div>
      </div>
    </div>
</div>
</div>


<script>
  // setea la fecha actual como fecha m√°xima de "encontrado"
  $(document).ready(function () {
    var hoy = formatDate(new Date());
    document.getElementById("InputFechaDescubrimiento").setAttribute("max", hoy);
    $("#InputFechaDescubrimiento").attr("max", hoy);
  })

  function formatDate(date) {
    var d = new Date(date),
      month = '' + (d.getMonth() + 1),
      day = '' + d.getDate(),
      year = d.getFullYear();

    if (month.length < 2)
      month = '0' + month;
    if (day.length < 2)
      day = '0' + day;

    return [year, month, day].join('-');
  }

</script>