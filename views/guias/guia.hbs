<div style="padding-top: 10px"></div>
<h1>Guias <a href="/guias/agregar" class="btn btn-success btn-primary" rel="noopener noreferrer">+</a></h1>
<table style="table-layout: fixed; word-wrap: break-word;" class="table table-striped table-bordered" id="guias" >
  <thead>
    <th>Documento</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Direccion</th>
    <th>Localidad</th>
    <th>Email</th>
    <th>Fecha de Nacimiento</th>
    <th>Telefono</th>
    <th>Idiomas</th>
    <th>Acciones</th>
  </thead>
  <tbody>
    {{#each results}}
    <tr>
      <td>{{this.Persona.identificacion}}</td>
      <td>{{this.Persona.nombre}}</td>
      <td>{{this.Persona.apellido}}</td>
      <td>{{this.Persona.direccion}}</td>
      <td>{{this.Persona.localidad}}</td>
      <td>{{this.Persona.email}}</td>
      <td>{{this.Persona.fecha_nacimiento}}</td>
      <td>{{this.Persona.telefono}}</td>
      <td>{{#each Idiomas}}{{this.nombre}}<br />{{/each}}</td>
      <!-- acciones aca -->
      <td>
        <a href="/guias/editar/{{this.id}}"><span class="material-icons">edit</span></a>
        <!--editar-->
        <a href="/guias/eliminar/{{this.id}}"><span style="color:red" class="material-icons">delete</span></a>
        {{!-- otras acciones mas --}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


