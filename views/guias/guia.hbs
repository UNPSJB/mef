<div style="padding-top: 10px">
  <h1>Guias <a href="/guias/agregar" class="btn btn-success btn-primary" rel="noopener noreferrer">+</a></h1>
  <table class="table table-striped table-bordered" id="datatable">
    <thead>
      <th>Documento</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Localidad</th>
      <th>Email</th>
      <th>Fecha de Nacimiento</th>
      <th>Telefono</th>
      <th>Idiomas</th>
      <th>Acciones</th>
    </thead>
    <tbody>
      {{#each results}}
      <tr>
        <td>{{this.Persona.identificacion}}</td>
        <td>{{this.Persona.nombre}}</td>
        <td>{{this.Persona.apellido}}</td>
        <td>{{this.Persona.direccion}}</td>
        <td>{{this.Persona.localidad}}</td>
        <td>{{this.Persona.email}}</td>
        <td>{{this.Persona.fecha_nacimiento}}</td>
        <td>{{this.Persona.telefono}}</td>
        <td>{{#each Idiomas}}{{this.nombre}}<br/>{{/each}}</td>
        <!-- acciones aca -->
        <td>
          <a href="/guias/editar/{{this.id}}"><i class="far fa-edit"></i></a>
          <!--editar-->
          <a href="/guias/eliminar/{{this.id}}"><i class="fas fa-minus-circle" style="color: red;"></i></a>
          {{!-- otras acciones mas --}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        
        <a class="btn btn-primary" href="/guias?page={{ prevPage }}&limit={{limit}}" role="button">Anterior</a>
        Mostrando de {{ firstIndex }} - {{ lastIndex }}  de {{ total }}, Pagina {{ page }} de {{ totalPages }}
        <a class="btn btn-primary" href="/guias?page={{ nextPage }}&limit={{limit}}" role="button">Siguiente</a>
      </div>
    </div>
  </div>
</div>