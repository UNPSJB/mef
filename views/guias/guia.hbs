<div style="padding-top: 10px"></div>
<h1 class="bg-secondary text-center text-white rounded p-2">
  Guías
  <a href="/guias/agregar" class="btn btn-success btn-primary border border-light" rel="noopener noreferrer">
    +
  </a>
  <a href="http://localhost:4001/docs/sections/gestiones/rrhh.html#guias" class="btn btn-info ml-auto" target="_blank">
    Manual
  </a>
</h1>
<table style="table-layout: fixed; word-wrap: break-word;" class="table table-striped table-bordered" id="guias">
  <thead>
    <th>#</th>
    <th>Documento</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Direccion</th>
    <th>Localidad</th>
    <th>Email</th>
    <th>Fecha de Nacimiento - dd/mm/aaaa</th>
    <th>Telefono</th>
    <th>Idiomas</th>
    <th scope="col" data-orderable="false">Acciones</th> <!-- Desactiva el ordenamiento en esta columna -->
  </thead>
  <tbody>
  </tbody>
</table>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script>
  $(document).ready(function () {
    $('#guias').DataTable({
      dom: 'Bfrtip',
      serverSide: true,
      ajax: {
        url: '/guias/list', // URL del endpoint que devuelve los datos de guías
        type: 'GET', // Tipo de petición HTTP
         {{> paginacion / data}}
      },
    columns: [
    { data: 'id' }, // Columna de ID
    { data: 'identificacion' }, // Columna de Documento
    { data: 'nombre' }, // Columna de Nombre
    { data: 'apellido' }, // Columna de Apellido
    { data: 'direccion' }, // Columna de Dirección
    { data: 'localidad' }, // Columna de Localidad
    { data: 'email' }, // Columna de Correo Electrónico
    { data: 'fecha_nacimiento' }, // Columna de Fecha de Nacimiento
    { data: 'telefono' }, // Columna de Teléfono
    { data: 'idiomas' }, // Columna de Idiomas
    { // Columna de Acciones
      data: null,
      render: function (data, type, row) {
        return '<a href="/guias/editar/' + data.id + '"><span class="material-icons">edit</span></a>' +
          '<a href="/guias/eliminar/' + data.id + '"><span style="color:red" class="material-icons">delete</span></a>';
      }
    }
  ],
    buttons: [
    'pdf', 'excel', 'csv'
  ],
    searching: true,
    ordering: true,
    processing: true,
    language: {
    processing: "Buscando...",
    search: "Buscar:",
    lengthMenu: "Mostrando _MENU_",
    info: "Mostrando _START_ de _END_ de un total de _TOTAL_ ",
    infoEmpty: "Mostrando 0 de 0 de un total de 0 ",
    infoFiltered: "(de un total de _MAX_)",
    infoPostFix: "",
    loadingRecords: "Cargando...",
    zeroRecords: "No hay coincidencias.",
    emptyTable: "No hay guías.",
    paginate: {
      first: "Primero",
      previous: "Anterior",
      next: "Siguiente",
      last: "Último"
    },
    aria: {
      sortAscending: ": Ordenar ascendente",
      sortDescending: ": Ordenar descendente"
    }
  }
    });
  });
</script>
