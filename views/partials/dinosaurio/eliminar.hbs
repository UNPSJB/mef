<div class="modal fade -lg" id="eliminarDinoModal{{this.id}}" tabindex="-1" role="dialog"
    aria-labelledby="editarDinoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarDinoModalLabel">Editar dinosaurio</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                <div class="alert alert-danger mt-4">{{#if this.name}} {{this.name}} {{/if}}
                    Seguro que queres borrar esto ?
                    </div>
                <table class="table">
                    <thead>
                        <th scope="col">#</th>
                        <th scope="col">Activo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Alimentacion</th>
                        <th scope="col">Periodo</th>
                        <th scope="col">Subclase</th>
                        <th scope="col">Descubrimiento</th>
                    </thead>
                    <tbody>
                        <tr>
                            <th>{{this.id}}</th>
                            <td>{{this.activo}}</td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.alimentacion}}</td>
                            <td>{{this.periodo}}</td>
                            <td>{{this.subclase}}</td>
                            <td>{{this.descubrimiento}}</td>
                        </tr>
                    </tbody>
                </table>
                <form action="/dinosaurios?_method=DELETE" method="POST">
                    <input name="id" type="number" value="{{this.id}}" hidden required>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a href="/dinosaurios" class="btn btn-primary">Volver</a>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>