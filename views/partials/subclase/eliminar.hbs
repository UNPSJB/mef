<!-- Modal -->
<div class="modal fade" id="eliminar{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="agregarModalTitle"
 aria-hidden="true">
 <div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
   <div class="modal-header">
    <h5 class="modal-title" id="agregarModalTitle">Agregar Subclase</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
     <span aria-hidden="true">&times;</span>
    </button>
   </div>
   <div class="modal-body">
    <div class="alert alert-danger">Â¿Seguro que desea borrar esto?</div>
    <table class="table">
     <thead>
      <th scope="col">Descripcion</th>
      <th scope="col">Clase</th>
     </thead>
     <tbody>
      <tr>
       <th>{{this.descripcion}}</th>
       <td>{{this.clase}}</td>
      </tr>
     </tbody>
    </table>
    <form action="/subclases?_method=DELETE" method="POST">
     <input name="id" type="number" value="{{this.id}}" hidden required>
   </div>
   <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <button type="submit" class="btn btn-danger">Eliminar</button>
   </div>
   </form>
  </div>
 </div>
</div>